{% extends "layout.jinja2" %}
{% block body %}
<section>
<article>
    <h2 class="entrytitle">{{ entries.title }}</h2>
    <p class="date">{{ entries.creation_date }}</p>
    <p class="entry">{{entries.body}}</p>
    <a class="btn btn-primary" href="/journal/{{id}}/edit-entry">Edit</a>
    <a class="btn btn-primary pull-right" href="/">Back</a>
</article>
</section>
{% endblock %}   